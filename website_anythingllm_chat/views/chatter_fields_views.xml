<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Chatter Fields -->
    <record id="chatter_fields_tree" model="ir.ui.view">
        <field name="name">website.chatter.fields.tree</field>
        <field name="model">website.chatter.fields</field>
        <field name="arch" type="xml">
            <tree string="Chatter Fields" create="false">
                <field name="data_embed_id"/>
                <field name="data_base_api_url"/>
                <field name="src"/>
                <field name="data_chat_icon"/>
                <field name="website_ids"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Chatter Fields -->
    <record id="chatter_fields_form" model="ir.ui.view">
        <field name="name">website.chatter.fields.form</field>
        <field name="model">website.chatter.fields</field>
        <field name="arch" type="xml">
            <form string="Chatter Fields" create="false">
                <header>
                    <button name="action_sync" type="object" string="Sync" class="btn-primary"
                        icon="fa-refresh"/>
                </header>
                <sheet>
                    <group>
                        <!-- Required Fields -->
                        <group name="required_fields" string="Required Fields">
                            <field name="data_embed_id"/>
                            <field name="data_base_api_url"/>
                            <field name="src"/>
                        </group>

                        <!-- Website to Apply Style -->
                        <group name="website_style" string="Website to Apply Style">
                            <field name="website_ids"/>
                        </group>

                        <!-- Content Fields -->
                        <group name="content_fields" string="Content Fields">
                            <field name="data_chat_icon"/>
                            <field name="data_brand_image_url"/>
                            <field name="data_greeting"/>
                            <field name="data_assistant_name"/>
                            <field name="data_username"/>
                            <field name="data_default_message"/>
                            <field name="data_support_email"/>
                            <field name="data_open_on_load"/>
                            <field name="data_position"/>
                        </group>

                        <!-- Sponsor Data -->
                        <group name="sponsor_data" string="Sponsor Data">
                            <field name="data_no_sponsor"/>
                            <field name="data_sponsor_link"/>
                            <field name="data_sponsor_text"/>
                        </group>

                        <!-- UI Fields -->
                        <group name="ui_fields" string="UI Fields">
                            <group name="colors" string="Colors">
                                <field name="data_button_color" widget="color"/>
                                <field name="data_user_bg_color" widget="color"/>
                                <field name="data_assistant_bg_color" widget="color"/>
                            </group>
                            <group name="dimensions" string="Dimensions">
                                <field name="data_text_size"/>
                                <field name="data_window_height" class="o_form_field"/>
                                <field name="height_suffix" class="o_field_no_label" widget="selection"/>
                                <field name="data_window_width" class="o_form_field"/>
                                <field name="width_suffix" class="o_field_no_label" widget="selection"/>
                            </group>
                        </group>

                        <!-- Notebook for Code Preview -->
                        <notebook>
                            <page string="Code Preview">
                                <field name="data_html" widget="code" options="{'mode': 'xml'}"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Chatter Fields -->
    <record id="chatter_fields_action" model="ir.actions.act_window">
        <field name="name">Website Chatter Fields</field>
        <field name="res_model">website.chatter.fields</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create o_view_nocontent_smiling_face">
                No styles found. Create one.
            </p>
        </field>
    </record>
</odoo>
