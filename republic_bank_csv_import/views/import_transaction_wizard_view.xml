<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_import_transaction_wizard_form" model="ir.ui.view">
        <field name="name">import.transaction.wizard.form</field>
        <field name="model">import.transaction.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Transactions">
                <group>
                    <field name="file" filename="filename"/>
                </group>
                <footer>
                    <button name="import_transactions" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
